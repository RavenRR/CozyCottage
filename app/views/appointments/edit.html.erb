<h1> Edit Appointment </h1>
<%= render partial: "layouts/errors", locals: {object: @appointment} %>
<%= form_for(@appointment) do |f| %>
<br>
    <br>
<%= f.label :title %>
<%= f.text_field :title %>
<br>
    <br>
<%= f.label :content %>
<%= f.text_area :content,size: "50x10"  %>
<br> 
    <br>
<%= f.label :completed %>
<%= f.date_field :completed %>
<br>
    <br>
<%= f.submit %>

<% end %>