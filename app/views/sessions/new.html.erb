<div class="jumbotron text-center">
<h1> Login </h1>

</div>
<% if flash[:message] %>
    <%= flash[:message] %>
    <% end %>
<br>
    <br>
<%= form_for :user do |f| %>
<%= f.label :email %>
<%= f.email_field :email %>
<br>
    <br>
<%= f.label :password %>
<%= f.password_field :password %>
<br>
    <br>
<%= f.submit "Login", :class => "btn btn-primary btn-sm" %>

<%= link_to "Back", root_path, :class => "btn btn-primary btn-sm" %>
</div>

<% end %>